  "all": true,
  "check-coverage": true,
  "report-dir": "./coverage",
  "include": [
    "app/domains/**",
    "app/infrastructure/orm/**",
    "app/infrastructure/emails/**",
    "app/infrastructure/notifications/**",
    "app/presentation/rest/adonis/controllers/**"
